<div class="content_post" style="background-image: url(<%= record.image %>);">
  <% if user_signed_in? && current_user.id == record.user.id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '削除', "/records/#{record.id}", method: :delete %>
        </li>
      </ul>
    </div>
  <% end %>
  <p>
    <%= br(record.text) %>
  </p>
  <span class="name">
    <a href="">
      <span>投稿者</span><%= record.user.nickname %>
    </a>
  </span>
</div>